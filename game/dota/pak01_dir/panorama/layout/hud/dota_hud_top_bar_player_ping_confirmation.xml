<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/hudstyles.vcss_c" />
		<include src="s2r://panorama/styles/hud/hud_reborn.vcss_c" />
		<include src="s2r://panorama/styles/hud/dota_hud_top_bar_player_ping_confirmation.vcss_c" />
	</styles>

  <DOTATopBarPlayerPingConfirmation>
    <Panel id="PingConfirmationContainer" hittest="true" class="show">
      <Button id="AgreeButton" class="AgreeDisagreeButton" onactivate="DOTAPingConfirmationButtonClicked(true)">
        <Panel id="AgreeImage" class="Image"/>
        <Label id="AgreeCountLabel" text="{d:AgreeCount}"/>
      </Button>
      <Button id="DisagreeButton" class="AgreeDisagreeButton" onactivate="DOTAPingConfirmationButtonClicked(false)">
        <Panel id="DisagreeImage" class="Image"/>
        <Label id="DisagreeCountLabel" text="{d:DisagreeCount}"/>
      </Button>
      <Panel id="PingTypeImage"/>
    </Panel>
  </DOTATopBarPlayerPingConfirmation>
</root>

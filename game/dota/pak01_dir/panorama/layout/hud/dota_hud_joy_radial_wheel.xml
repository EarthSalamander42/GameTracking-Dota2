<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/hudstyles.vcss_c" />
		<include src="s2r://panorama/styles/hud/dota_hud_joy_radial_wheel.vcss_c" />
	</styles>

	<snippets>
		<snippet name="Option">
			<Panel class="Option">
				<Label text="{s:name}" />
			</Panel>
		</snippet>
	</snippets>
	
	<DOTAJoyRadialWheel class="Hidden" hittest="false" hittestchildren="false">
		<Panel id="Wheel">
			<Panel id="Arrow" class="Hidden" />
			<Panel id="PointerContainer">
				<Panel id="WheelPointer" />
			</Panel>
			<Panel id="WheelBG">
				<Panel id="WheelCenter">
					<Panel id="WheelBG2" />
				</Panel>
			</Panel>
			<Panel id="Bubble">
				<DOTAHeroImage id="HeroImage" heroimagestyle="icon" />
			</Panel>
		</Panel>
		<Panel id="OptionsContainer">
			<!-- Filled in dynamically with Option snippets -->
		</Panel>
	</DOTAJoyRadialWheel>
</root>



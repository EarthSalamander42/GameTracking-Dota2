<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_overwatch_convict.vcss_c" />
		<include src="s2r://panorama/styles/hud/hud_reborn.vcss_c" />
		<include src="s2r://panorama/styles/hud/dota_hud_scoreboard.vcss_c" />
	</styles>

	<snippets>
		<snippet name="Infraction">
			<Panel class="Infraction">
				<Label class="Title" text="{s:title}"/>
				<Label class="HelpText" text="{s:help_text}"/>
			</Panel>
		</snippet>
	</snippets>

	<DOTAPopupOverwatchConvict class="PopupPanel Hidden" popupbackground="dim" oncancel="UIPopupButtonClicked()">

		<Panel id="MainContents">

			<Panel id="LeftPanel">
				<Panel id="OverwatchResolutionArt">
					<Label text="#DOTA_Overwatch_Conviction_Resolution"/>
				</Panel>
				<Panel id="OverwatchHelpText">
					<Label text="#DOTA_Overwatch_Conviction_Resolution_Help_Text"/>
				</Panel>
			</Panel>

			<Panel id="RightPanel">
				<Panel id="Infractions">
				</Panel>

				<Panel id="JudgementButtons">
					
					<Panel class="Convictions">
						<RadioButton id="NotGuiltyConviction" group="Conviction" selected="true" onactivate="DOTASetOverwatchSetConviction(1)">
							<Label text="Not Guilty"/>
						</RadioButton>
						<RadioButton id="UnclearConviction" group="Conviction" onactivate="DOTASetOverwatchSetConviction(2)">
							<Label text="Unclear"/>
						</RadioButton>
						<RadioButton id="GuiltyConviction" group="Conviction" onactivate="DOTASetOverwatchSetConviction(3)">
							<Label text="Guilty"/>
						</RadioButton>
					</Panel>
					
					<Panel class="PopupButtonRow">
						<TextButton class="PopupButton Red" text="#DOTA_Overwatch_Conviction_Resolution_Cancel" onactivate="UIPopupButtonClicked( )" />
						<TextButton class="PopupButton Green" text="#DOTA_Overwatch_Conviction_Resolution_SubmitResolution" onactivate="DOTAOverwatchConvict()" />
					</Panel>
					
				</Panel>
			</Panel>
		</Panel>
	</DOTAPopupOverwatchConvict>
</root>

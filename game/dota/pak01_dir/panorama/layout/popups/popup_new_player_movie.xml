<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_new_player_movie.vcss_c" />
	</styles>

	<DOTANewPlayerMoviePopup class="PopupPanel" oncancel="UIPopupButtonClicked()">
		<Panel id="MovieContainer">
			<!-- movie loaded in code because of issues with resourcecompiler not playing well with CMoviePlayer -->
			<Movie id="Movie" controls="minimal" disableactivatepause="false" autoplay="onload" />
		</Panel>
		<Button class="CloseButton" onactivate="UIPopupButtonClicked()" />
	</DOTANewPlayerMoviePopup>
</root>


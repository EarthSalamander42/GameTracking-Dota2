<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
		<include src="s2r://panorama/styles/popups/popups_overwatch_prep.vcss_c" />
	</styles>

	<Popup class="PopupPanel Hidden" popupbackground="blur" oncancel="UIPopupButtonClicked()">
		<Panel id="Header">
			<TextButton id="CloseButton" class="ButtonDark" text="X" onactivate="UIPopupButtonClicked()" />
			<Label text="#DOTA_Overwatch_Review_Case"/>
		</Panel>
		<Panel id="Body">
			<Label id="Description" text="#DOTA_Overwatch_Review_Description"/>
			<Label id="FinePrint" text="#DOTA_Overwatch_Review_FinePrint"/>

			<Panel id="Buttons">
				<TextButton id="OverwatchDownloadReplayButton"	class="PopupButton" onactivate="DOTADownloadOverwatchCase();" text="#DOTA_Overwatch_Download_Replay_Button"/>
				<TextButton id="OverwatchReviewReplayButton"		class="PopupButton" onactivate="DOTAReviewOverwatchCase();"		text="#DOTA_Overwatch_Review_Case_Button" disabled="true"/>
			</Panel>
			<Label id="OverwatchStatusLabel" text=""/>
		</Panel>
	</Popup>
</root>

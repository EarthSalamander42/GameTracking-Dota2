<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/dpc/schedule.vcss_c" />
		<include src="s2r://panorama/styles/dpc/widgets/widget_watch_mini_schedule.vcss_c" />
	</styles>

	<snippets>
		
		<snippet name="Match">
			<Panel>
				<DOTATeamImage id="TeamLogo1" teamimagestyle="squaremedium" />
				<Label class="TeamText" text="vs."/>
				<DOTATeamImage id="TeamLogo2" teamimagestyle="squaremedium" />
				<Label class="TeamText ScheduleDate" text="{s:day} - {s:month} {d:dayofmonth}"/>
				<Label class="TeamText ScheduleTime" text="{t:t:start_time}"/>
			</Panel>
		</snippet>
		
	</snippets>

	<DotaDPCMiniScheduleWidget>
		<Panel class="ScheduleContainer">
			<Label class="ContainerTitle" text="Upcoming Matches"/>
			<Panel id="MatchesContainer">
				
			</Panel>
		</Panel>
	</DotaDPCMiniScheduleWidget>
</root>

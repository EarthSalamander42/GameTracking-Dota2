<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/dpc/standings.vcss_c" />
	</styles>

	<snippets>
		<snippet name="StandingsCompact">
			<Panel class="RatingProgress">
				<CircularProgressBar id="RatingProgressBar" />
				<Label class="RatingBadgeValue" text="{d:coach_rating}" />
			</Panel>
		</snippet>
		<snippet name="StandingsStandard">
			<Panel class="RatingBadge">
				<Label class="RatingBadgeValue" text="{d:coach_rating}" />
			</Panel>
		</snippet>
		
	</snippets>

	<Panel>
		<!-- One of the snippets will be loaded based on the -->
	</Panel>
</root>

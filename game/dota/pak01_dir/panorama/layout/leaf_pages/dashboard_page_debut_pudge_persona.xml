	<!--DOTAAntimagePersonaDebutPage class="DashboardPage" onnavigatedto="RunPageAnimation()" oncancel="DOTASetCurrentDashboardPageFullscreen( false )"-->
	<DOTAReferencePage class="DashboardPage" onnavigatedto="RunPageAnimation()" onnavigatedaway="closePudgePersonaDebutPage()" oncancel="DOTASetCurrentDashboardPageFullscreen( false )">


		<Panel id="MainContainer"  >
			<Panel id="ModelContainer" />
			<Panel id="BottomGradient" hittest="false"/>
			<Panel id="DebutInformation" hittest="false">
				<Image id="InformationBodyBackground" src="s2r://panorama/images/compendium/international2020/wriath_king_arcana/crown-main_png.vtex" hittest="false"/>
				<Panel id="InformationBody" class="TopBottomFlow" hittest="false">
					<Panel id="TitleContainer" hittest="false">
						<Panel class="Title" hittest="false" />
						<Label id="Intro" text="#Debut_Pudge_Persona_Subtitle" hittest="false" />
					</Panel>
					
					<Panel id="ScrollPanel" class="TopBottomFlow">
						<Label id="ItemLore" text="#Debut_Pudge_Persona_Lore" hittest="false"/>

						<MoviePanel id="Video1" src="file://{resources}/videos/promo/pudge_persona.webm" repeat="true" autoplay="onload"  />
						
						<Panel class="BulletList LeftRightFlow" >
							<Panel class="Bullet" />
							<Panel class="BulletDesc">
								<Label  html="true" text="#Debut_Pudge_Persona_Feature_1_Title" />
								<Label text="#Debut_Pudge_Persona_Feature_1_Desc" />
							</Panel>
						</Panel>
						<Panel class="BulletList LeftRightFlow" >
							<Panel class="Bullet" />
							<Panel class="BulletDesc">
								<Label html="true" text="#Debut_Pudge_Persona_Feature_2_Title" />
								<Label text="#Debut_Pudge_Persona_Feature_2_Desc" />
							</Panel>
						</Panel>
						<Panel class="BulletList LeftRightFlow" >
							<Panel class="Bullet" />
							<Panel class="BulletDesc">
								<Label html="true" text="#Debut_Pudge_Persona_Feature_3_Title" />
								<Label text="#Debut_Pudge_Persona_Feature_3_Desc" />
								<Panel id="ESImages">
								<Panel id="HeroPortrait" class="InlineImage" />
									<Panel id="HeroIcons" class="InlineImage" />
									<Panel id="HeroAbilities" class="InlineImage" />
								</Panel>
							</Panel>
						</Panel>
						<Panel class="BulletList LeftRightFlow" >
							<Panel class="Bullet" />
							<Panel class="BulletDesc">
								<Label html="true" text="#Debut_Pudge_Persona_Feature_4_Title" />
								<Label text="#Debut_Pudge_Persona_Feature_4_Desc" />
							</Panel>
						</Panel>

					</Panel>
					<Panel id="HeroButtons">
						<Panel id="DemoButtons">
							<DemoModeButton id="DemoHeroButton" category="#npc_dota_hero_pudge" onactivate="DOTADemoHero( npc_dota_hero_pudge, 13786 )" />
							<DOTAPurchaseBattlePassReward class="PurchaseButton FixedSize" event-id="EVENT_ID_INTERNATIONAL_2020" reward-level="255" already-claimed-text="#Debut_QueenOfPainArcana_ViewProgress" already-claimed-onactivate="DOTAShowHeroPage( 39 )"/>
							<TextButton class="BattlePassButton BuyBattlePassButton" onactivate="DOTAShowBPInternational2020PurchasePage( false )" text="#DOTA_FrontPage_International2019_Buy"/>
					</Panel>
					</Panel>
				</Panel>
			</Panel>
			

			

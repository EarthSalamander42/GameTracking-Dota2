<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/guild_level.vcss_c" />
	</styles>

	<DOTAGuildLevel>

		<Panel class="CircleContainer">
			<CircularProgressBar id="NextLevelProgressBar" />
			<Panel id="LevelCircleBorder"/>
			<Panel id="LevelCircle">
				<Label id="LevelNumber" text="{d:guild_level}" />
			</Panel>
		</Panel>

		<Panel id="GuildLevelCounter" >
			<Label id="CurrentXP" text="{d:guild_points_earned_in_level}" />
			<Panel id="XPDivider" />
			<Label id="XPRequirement" text="{d:guild_points_total_in_level}" />
		</Panel>
	</DOTAGuildLevel>

</root>

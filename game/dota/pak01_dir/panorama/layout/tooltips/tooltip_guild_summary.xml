<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_guild_shared.vcss_c" />
		<include src="s2r://panorama/styles/tooltips/tooltip_guild_summary.vcss_c" />
	</styles>

	<Panel class="GuildSummaryContents">
		<AsyncDataPanel id="SummaryContents" state="{d:summary_state}">
			<Panel class="AsyncSuccessContainer">
				<Panel id="GuildLogoContainerStatus">
					<DOTAGuildImage id="GuildImage" />
					<Panel id="GuildLogoFrame" />
				</Panel>
				<Panel id="GuildText">
					<Label id="GuildName" text="{g:dota_guild_name:guild_id}" />
					<Label id="GuildTag" text="[{g:dota_guild_tag:guild_id}]" />
				</Panel>
				<DOTAGuildLevel id="GuildLevel" class="NoPointsProgress"/>
			</Panel>
		</AsyncDataPanel>

	</Panel>
</root>

<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/frontpage_shared.vcss_c" />
		<include src="s2r://panorama/styles/frontpage_backgroundmap.vcss_c" />
		<include src="s2r://panorama/styles/frontpage_dpc_shared.vcss_c" />
		<include src="s2r://panorama/styles/frontpage_dpc_upcoming.vcss_c" />
	</styles>

	<DOTAFrontpageDPCUpcoming class="DPCCell">
		<Panel class="CellBackground Blur LeftRightFlow">
			<Panel id="MapPreview">
				<Image id="MapBG"/>
				<Panel id="MapBuildingLayer"/>
				<Panel id="MapHeroLayer"/>
			</Panel>
		</Panel>
		<Panel class="OverlayGradient"/>
		<Panel class="CellHeader">
			<Image id="DPCLogo" src="s2r://panorama/images/dpc/dpc_logo_color.vsvg" texturewidth="18" textureheight="18" />
			<Label class="DPCName" text="DPC"/>
			<Label class="CellTitle" text="Coming Up" />
		</Panel>
		<Panel class="DPCBody">
			<Panel class="DPCBodyHeader">
				<Label class="DPCGameInfo" text="{s:game_time}" />
				<Label class="DPCGameDivision" text="{s:division}" />
			</Panel>
			<Panel id="TeamRow1" class="DPCTeamRow">
				<DOTAUGCImage id="TeamImage" />
				<Label class="DPCTeamName" text="{s:team_name}" />
				<Label class="TeamRecord" text="{d:team_wins} - {d:team_losses}" />
			</Panel>
			<Panel id="TeamRow2" class="DPCTeamRow">
				<DOTAUGCImage id="TeamImage" />
				<Label class="DPCTeamName" text="{s:team_name}" />
				<Label class="TeamRecord" text="{d:team_wins} - {d:team_losses}" />
			</Panel>
		</Panel>
	</DOTAFrontpageDPCUpcoming>

</root>
